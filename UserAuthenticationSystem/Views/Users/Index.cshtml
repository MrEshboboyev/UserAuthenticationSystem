@model List<User>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Users List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Users" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New User
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Email
                </th>
                <th>
                    Password Hash
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Date Of Birth
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Profile Picture
                </th>
                <th>
                    Created At
                </th>
                <th>
                    Updated At
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Id))
            {
                <tr>
                    <td>@obj.Email</td>
                    <td>
                        @obj.PasswordHash
                    </td>
                    <td>@obj.FirstName</td>
                    <td>
                        @obj.LastName
                    </td>
                    <td>@obj.DateOfBirth</td>
                    <td>
                        @obj.Address
                    </td>
                    <td>@obj.PhoneNumber</td>
                    <td>
                        @obj.ProfilePicture
                    </td>
                    <td>@obj.CreatedAt</td>
                    <td>
                        @obj.UpdatedAt
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            @* asp-route-id="@obj.Id" = This part marks the values ​​being passed to the action (ie as an incoming function argument) *@
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}